<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="card_style">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">@color/switch_red</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="card_text_style">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="detail_name_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30dp</item>
        <item name="layout_goneMarginTop">10dp</item>
    </style>
    <style name="detail_description_text_style">
        <item name="android:textSize">25dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>